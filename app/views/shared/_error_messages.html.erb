<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @user.errors.each do |attribute, error| %>
        <% if @user.errors.include?(attribute)  %>
          <% if @user.errors.full_message(attribute, error) == 
                @user.errors.full_messages_for(attribute).first %>
            <li><%= @user.errors.full_message(attribute, error) %></li>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </div>
<% end %>